<decoder-config xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://jmri.org/xml/schema/decoder.xsd" showEmptyPanes="no" >
  <version author="F-P. Mueller" version="1" lastUpdated="20180129"/>
  <!-- version 1 - test only -->
  
  <decoder>
    <!-- Mit DCC-Interface -->
    <family name="DCC-boards" mfg="Public-domain and DIY">
      <model model="1-3_Aspect"/>
    </family>
    <programming direct="yes" paged="no" register="no" ops="yes">
    </programming>
    <variables>

     <!-- Is the following actually accessible via the SV protocol? -->
     <!-- This sets a single JMRI-style composite address in two CVs  -->
      <variable CV="48" comment="Board SV address" item="Long Address" default="255">
        <splitVal highCV="49" upperMask="XXXXXVVV"/>
        <label>Long address</label>
        <tooltip>Long 14-bit address nr Only becomes active after a decoder reset</tooltip>
      </variable>

     <variable CV="7" item="Decoder Version" >
        <hexVal/>
        <label>Manufacturer Version No.</label>
      </variable>

      <variable CV="8" readOnly="yes" item="Manufacturer">
        <decVal/>
        <label>Manufacturer ID: </label>
      </variable>

     <variable item="Betriebsparameter1" CV="47">
        <hexVal/>
        <label>Operating mode: </label>
      </variable>
      <variable item="Betriebsparameter1Bit7-4" CV="47" mask="VVVVXXXX">
        <hexVal/>
        <label>   CV-valid-Flag(0x6):  </label>
      </variable>
      <variable item="Betriebsparameter1Bit0" CV="47" mask="XXXXXXXV">
        <hexVal/>
        <label>AutoAdress: </label>
        <tooltip>If this bit is set, the 1st received address is adopted as the start address in Prog mode  </tooltip>
      </variable>
      <variable item="Betriebsparameter2" CV="48">
        <splitVal highCV="49" />
        <label> PoM-address: </label>
        <tooltip>The change applies from the next reset</tooltip>
      </variable>
      <variable item="Betriebsparameter3" CV="1">
        <splitVal highCV="9"  upperMask="XXVVVVVV" />
        <label>    1. Switch address: </label>
        <tooltip>Changes apply immediately</tooltip>
      </variable>
      
      <!-- Variable für Funktion 1 -->
                                                                                    
<!-- Variable für FSIGNAL2 -->
     <variable item="Fkt-1 Fmode-Bit0" CV="120" mask="XXXXXXXV">
        <enumVal> 
          <enumChoice> <choice>off</choice> </enumChoice> <enumChoice> <choice>on</choice>  </enumChoice>
        </enumVal>
        <label>Out1-Hard: </label>
        <tooltip>If this bit is set, the output switches hard ( no soft fade-up ) </tooltip>
      </variable>
      <variable item="Fkt-1 Fmode-Bit1" CV="120" mask="XXXXXXVX">
        <enumVal> 
          <enumChoice> <choice>off</choice> </enumChoice> <enumChoice> <choice>on</choice>  </enumChoice>
        </enumVal>
        <label>Out2-Hard: </label>
        <tooltip>If this bit is set, the output switches hard ( no soft fade-up ) </tooltip>
      </variable>
      <variable item="Fkt-1 Fmode-Bit2" CV="120" mask="XXXXXVXX">
        <enumVal> 
          <enumChoice> <choice>off</choice> </enumChoice> <enumChoice> <choice>on</choice>  </enumChoice>
        </enumVal>
        <label>Out3-Hard: </label>
        <tooltip>If this bit is set, the output switches hard ( no soft fade-up ) </tooltip>
      </variable>
          <!-- Bits 6+7 are not valid at the following address -->
      <variable item="Fkt-1 Fmode-Bit6" CV="120" mask="XVXXXXXX">
        <enumVal> 
          <enumChoice> <choice>off</choice> </enumChoice> <enumChoice> <choice>on</choice>  </enumChoice>
        </enumVal>
        <label>Fade: </label>
        <tooltip>If the bit is set, an output that is active in the new and old images is not switched off when the signal image changes </tooltip>
      </variable>
      <variable item="Fkt-1 Fmode-Bit7" CV="120" mask="VXXXXXXX">
        <enumVal> 
          <enumChoice> <choice>off</choice> </enumChoice> <enumChoice> <choice>on</choice>  </enumChoice>
        </enumVal>
        <label>Invert: </label>
      </variable>
          <variable item="Fkt-1 Fmode" CV="120" >
        <hexVal/> 
        <label>Modebyte(hex): </label>
      </variable> 
      <variable item="Fkt-1 Par1" CV="121">
        <hexVal/>
        <label>Bits-static-0(hex): </label>
        <tooltip>Activated outputs when a 0 is received at this address </tooltip>
      </variable>
      <variable item="Fkt-1 Par2" CV="122">
        <hexVal/>
        <label>Bits-static-1(hex): </label>
        <tooltip>Activated outputs when a 1 is received at this address </tooltip>
      </variable>
          <!-- Parameter zur Dunkelschaltung des Vorsignals gelten nur bei der Grundadresse des Hauptsignals -->
      <variable item="Fkt-1 Par3" CV="123">
        <decVal/>
        <label>DistantsigIndex: </label>
        <tooltip>Address index of the distant signal to be switched off (1st address = 1, 0 = no distant signal)</tooltip>
      </variable>
      <variable item="Fkt-1 Par4" CV="124">
        <hexVal/>
        <label>DarkStates(hex): </label>
      </variable>
          <variable item="Fkt-1 Par5" CV="125">
        <hexVal/>
        <label>Bits flashing-0(hex): </label>
        <tooltip>Flashing outputs when a 0 is received at this address </tooltip>
      </variable>
      <variable item="Fkt-1 Par6" CV="126">
        <hexVal/>
        <label>Bits flashing-1(hex): </label>
        <tooltip>Flashing outputs when a 1 is received at this address </tooltip>
      </variable>
          <!-- keine Blinktakt werte beim Folgeeintrag -->
      <variable item="Fkt-1 Par7" CV="127">
        <decVal/>
        <label>Flashing cycle0: </label>
        <tooltip>Flashing cycle -phase ON ( 10ms units )</tooltip>
      </variable>
      <variable item="Fkt-1 Par8" CV="128">
        <decVal/>
        <label>Flashing cycle1: </label>
        <tooltip>Flashing cycle -phase OFF ( 10ms units )</tooltip>
      </variable>
        
      <!-- Variable für Funktion 2 -->
                                                                                    
<!-- Variable für FSIGNAL2 -->
     <variable item="Fkt-2 Fmode-Bit0" CV="130" mask="XXXXXXXV">
        <enumVal> 
          <enumChoice> <choice>off</choice> </enumChoice> <enumChoice> <choice>on</choice>  </enumChoice>
        </enumVal>
        <label>Out1-Hard: </label>
        <tooltip>If this bit is set, the output switches hard ( no soft fade-up ) </tooltip>
      </variable>
      <variable item="Fkt-2 Fmode-Bit1" CV="130" mask="XXXXXXVX">
        <enumVal> 
          <enumChoice> <choice>off</choice> </enumChoice> <enumChoice> <choice>on</choice>  </enumChoice>
        </enumVal>
        <label>Out2-Hard: </label>
        <tooltip>If this bit is set, the output switches hard ( no soft fade-up ) </tooltip>
      </variable>
      <variable item="Fkt-2 Fmode-Bit2" CV="130" mask="XXXXXVXX">
        <enumVal> 
          <enumChoice> <choice>off</choice> </enumChoice> <enumChoice> <choice>on</choice>  </enumChoice>
        </enumVal>
        <label>Out3-Hard: </label>
        <tooltip>If this bit is set, the output switches hard ( no soft fade-up ) </tooltip>
      </variable>
          <variable item="Fkt-2 Fmode" CV="130" >
        <hexVal/> 
        <label>Modebyte(hex): </label>
      </variable> 
      <variable item="Fkt-2 Par1" CV="131">
        <hexVal/>
        <label>Bits-static-0(hex): </label>
        <tooltip>Activated outputs when a 0 is received at this address </tooltip>
      </variable>
      <variable item="Fkt-2 Par2" CV="132">
        <hexVal/>
        <label>Bits-static-1(hex): </label>
        <tooltip>Activated outputs when a 1 is received at this address </tooltip>
      </variable>
          <variable item="Fkt-2 Par5" CV="135">
        <hexVal/>
        <label>Bits flashing-0(hex): </label>
        <tooltip>Flashing outputs when a 0 is received at this address </tooltip>
      </variable>
      <variable item="Fkt-2 Par6" CV="136">
        <hexVal/>
        <label>Bits flashing-1(hex): </label>
        <tooltip>Flashing outputs when a 1 is received at this address </tooltip>
      </variable>
        
      <!-- Variable für Funktion 3 -->
                                                                                    
       <!-- Variable für Funktion 4 -->
                                                                                    
       <!-- Variable für Funktion 4 -->
                                                                                    
       <!-- Variable für Funktion 5 -->
                                                                                    
       <!-- Variable für Funktion 6 -->
                                                                                    
       <!-- Variable für Funktion 7 -->
                                                                                    
       <!-- Variable für Funktion 8 -->
                                                                                    
       <!-- Variable für Funktion 9 -->
                                                                                    
       <!-- Variable für Funktion 10 -->
                                                                                    
       <!-- Variable für Funktion 11 -->
                                                                                    
       <!-- Variable für Funktion 12 -->
    </variables>
  </decoder>
